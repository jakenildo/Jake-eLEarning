<% provide(:title, "Learning #{@categories.title} Words ") %><div>
<div>
    <div class="container">
        <div class="row">
            <%= render'shared/info_card' %>
            <div class="col-md-6 col-xl-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="text-center mb-0"><i class="fa fa-book" style="padding-right: 5px;"></i> <%= @categories.title%> - Result</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead class="text-info">
                                            <tr>
                                                <th>Word</th>
                                                <th>Answer</th>
                                                <th colspan="2">Your Answer</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% @words.each do |wrd| %>
                                                <% wrd.choices.each do |c| %>
                                                    <tr>
                                                        <%if c.correct_ans == true %>
                                                        <td> <%= wrd.id %>.)  <%= wrd.words %> </td>
                                                        <td> <%= c.id %>.) <%= c.choices %> </td>
                                                            <% @ans.each do |a| %>
                                                                <% @choices.each do |chs| %>
                                                                    <%if chs.id == a.choice_id && wrd.id == a.word_id %>
                                                                        <td> <%= chs.id %>.) <%= chs.choices %> </td>
                                                                        <%if chs.id == a.choice_id && wrd.id == a.word_id && a.choice_id == c.id  %>
                                                                            <% @count += 1 %>
                                                                            <td> <i class="fa fa-check"></i> </td>
                                                                        <%else%>
                                                                            <td> <i class="fa fa-times"></i> </td>
                                                                        <%end%>
                                                                    <%end%>
                                                                <% end %>
                                                            <% end %>
                                                        <%end%>
                                                    </tr>
                                                <%end%>
                                            <%end%>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="row">
                               
                                    <div class="col" style="margin-top: 50px;margin-bottom: 25px;">
                                    
                                        <h4 class="text-center">Score <%= @count %> out of <%= @words.count %></h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col d-xl-flex justify-content-xl-center">
                                <%= link_to raw("<i class='fa fa-arrow-circle-left'></i>Â Back to Lessons"), new_lesson_path,class: "btn btn-outline-primary"%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>