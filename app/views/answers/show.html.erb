<% provide(:title, "Learning #{@categories.title} Words ") %><div>
<div>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-xl-4">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-xl-3">
                            <%= gravatar_for current_user %>
                            </div>
                            <div class="col">
                                <h4><%= current_user.name%></h4>
                                <h4>Words Learned: &lt;number&gt;</h4>
                                <div class="row">
                                    <div class="col">
                                        <h6 class="text-center">Followers:<br />15</h6>
                                    </div>
                                    <div class="col">
                                        <h6 class="text-center">Following:<br />10</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-xl-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="text-center mb-0"><i class="fa fa-book" style="padding-right: 5px;"></i> <%= @categories.title%> - Result</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead class="text-info">
                                            <tr>
                                                <th>Word</th>
                                                <th>Answer</th>
                                                <th colspan="2">Your Answer</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        <% @words.each do |wrd| %>
                                        <% wrd.choices.each do |c| %>
                                            <tr>
                                                <%if c.correct_ans == true %>
                                                <td> <%= wrd.words %> </td>
                                                <td> <%= c.choices %> </td>
                                                    <% @ans.each do |a| %>
                                                        <% @choices.each do |chs| %>
                                                            <%if chs.id == a.choice_id && wrd.id == a.word_id %>
                                                                <td> <%= chs.choices %> </td>
                                                            <%end%>
                                                        <% end %>
                                                    <% end %>
                                                <%end%>
                                            </tr>
                                        <%end%>
                                        <%end%>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="row">
                               
                                    <div class="col" style="margin-top: 50px;margin-bottom: 25px;">
                                        <h4 class="text-center">Score <%= @correct_ans.count %> out of <%= @words.count %></h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col d-xl-flex justify-content-xl-center">
                                <%= link_to raw("<i class='fa fa-arrow-circle-left'></i>Â Back to Lessons"), new_lesson_path,class: "btn btn-outline-primary"%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>