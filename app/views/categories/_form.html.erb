<%= form_for(@categories) do |f| %>
<div class="row">
    <div class="col" style="padding-bottom: 5px;">
        <%= f.text_field :title, placeholder: "Lesson Title", style: "min-width: 300px" %>
    </div>
</div>
<div class="row">
    <div class="col" style="padding-bottom: 5px;">
        <%= f.text_area :description, placeholder: "Lesson Description", style: "min-width: 300px" %>
    </div>
</div>
<div class="row">
    <div class="col-xl-12 offset-xl-0" style="padding-bottom: 5px;">
        <%= link_to "Cancel", categories_path,class: "btn btn-outline-danger", style: "margin-right: 15px;" %>
        <%= f.submit "Submit", class: "btn btn-outline-success", style: "margin-left: 15px;" %>
    </div>
</div>
<% end %>