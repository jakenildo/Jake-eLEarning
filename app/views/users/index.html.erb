<% provide(:title, "Members List ") %>
<div class="container">
    <div class="row">
        <div class="col" style="padding-top: 2px;">
            <div class="card" style="min-width: 400;max-width: 400;">
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-xl-8 offset-xl-2">
                            <div class="card"></div>
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0"><i class="fa fa-users" style="padding-right: 5px;"></i>Members</h5>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped">
                                            <thead class="text-centered">
                                                <tr>
                                                    <th>Follow</th>
                                                    <th>Name</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% @users.each do |b| %>
                                                <tr>
                                                    <td> <button class="btn btn-outline-primary" type="button"><i class="fa fa-plus"></i> Follow</button></td>
                                                    <td> <%= gravatar_for b, size:20 %> 
                                                    <%=  link_to b.name, b %></td>
                                                    <td> <button class='btn btn-outline-primary' type="button"> <i class="fa fa-user-plus"></i> Make Admin </button>
                                                        <button class='btn btn-outline-primary' type="button"> <i class="fa fa-pen text-primary"></i> Edit </button>
                                                        <button class='btn btn-outline-danger' type="button"> <i class="fa fa-trash text-danger"></i> Delete </button>
                                                     </td>
                                                </tr>
                                                <% end %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="row">
                                        <div class="col d-flex justify-content-center">
                                            <%= will_paginate %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>