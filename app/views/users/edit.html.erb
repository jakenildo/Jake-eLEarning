<% provide(:title, "Update User ") %>


<div class="container">
    <div class="row">
        <div class="col" style="padding-top: 2px;">
            <div class="card" style="min-width: 400;max-width: 400;">
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-xl-8 offset-xl-2">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0"><i class="fa fa-gear" style="padding-right: 5px;"></i>Settings</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col" style="padding-bottom: 5px;"><input type="file" /></div>
                                    </div>
                                    <div class="row">
                                        <div class="col" style="padding-bottom: 5px;"><input type="text" placeholder="Name" style="min-width: 300px;" /></div>
                                    </div>
                                    <div class="row">
                                        <div class="col" style="padding-bottom: 5px;"><input type="email" style="min-width: 300px;" placeholder="Email@Email.com" /></div>
                                    </div>
                                    <div class="row">
                                        <div class="col" style="padding-bottom: 5px;"><input type="password" placeholder="Password" style="min-width: 300px;" /></div>
                                    </div>
                                    <div class="row">
                                        <div class="col" style="padding-bottom: 5px;"><input type="password" placeholder="Confirm Password" style="min-width: 300px;" /></div>
                                    </div>
                                    <div class="row">
                                        <div class="col" style="padding-bottom: 5px;"><button class="btn btn-outline-success" type="submit">Submit</button></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>