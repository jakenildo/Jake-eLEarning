<% provide(:title, "Learning #{@categories.title} Words ") %><div>
<div>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-xl-4">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-xl-3">
                            <%= gravatar_for current_user %>
                            </div>
                            <div class="col">
                                <h4><%= current_user.name%></h4>
                                <h4>Words Learned: &lt;number&gt;</h4>
                                <div class="row">
                                    <div class="col">
                                        <h6 class="text-center">Followers:<br />15</h6>
                                    </div>
                                    <div class="col">
                                        <h6 class="text-center">Following:<br />10</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-xl-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="text-center mb-0"><i class="fa fa-book" style="padding-right: 5px;"></i>Â <%= @categories.title%> - 1 out of <%= @counter = Word.where(category_id: @categories.id).count  %>  </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <div class="card">
                                    <div class="card-header">
                                    <% @words.each do |wrd| %>
                                        <h5 class="text-center mb-0"><%= wrd.words %></h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col offset-xl-3">
                                                <div class="card" style="max-width: 300px;margin-bottom: 20px;margin-top: 20px;">
                                                    <div class="card-body text-center" style="margin: 20px;">
                                                        <div class="form-group">
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="radio" id="formCheck-1" />
                                                                <label class="form-check-label" for="formCheck-1">Choice 1</label>
                                                            </div>
                                                        </div>
                                                        
                                                        <div class="form-group">
                                                            <button class="btn btn-outline-success" type="button">Submit</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <% end %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>