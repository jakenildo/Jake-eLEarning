<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | WordChoice</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
    <%= render 'layouts/header' %>
    <% flash.each do |key, value| %>
        <div class="row">
            <div class="col-xl-4 offset-xl-4 alert alert-<%= key %>  text-center"><%= value %></div>
        </div>
      <% end %>
    <%= yield %>
    <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
